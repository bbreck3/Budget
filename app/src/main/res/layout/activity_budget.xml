<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Budget"
    android:clickable="false"
    android:background="#ff0c0c0c"

    android:paddingStart="@dimen/activity_horizontal_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent"
        android:id="@+id/Rent"
        android:background="#ff0c0c0c"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/rent_textbox"
        android:layout_toLeftOf="@+id/savings_textbox"
        android:layout_toStartOf="@+id/savings_textbox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings"
        android:id="@+id/Savings"
        android:layout_marginTop="51dp"
        android:background="#ff010108"
        android:textColor="#ffffffff"
        android:layout_below="@+id/rent_textbox"
        android:layout_alignRight="@+id/Rent"
        android:layout_alignEnd="@+id/Rent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/Food"
        android:layout_marginBottom="50dp"
        android:background="#ff010107"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Laundry"
        android:layout_alignLeft="@+id/Savings"
        android:layout_alignStart="@+id/Savings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laundry"
        android:id="@+id/Laundry"
        android:background="#ff000003"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Food"
        android:layout_alignEnd="@+id/Food" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/savings_textbox"
        android:clickable="true"
        android:background="#ffffffff"
        android:textColor="#ff060606"
        android:layout_toStartOf="@+id/Expenditure_Label"
        android:layout_alignTop="@+id/Savings"
        android:layout_toLeftOf="@+id/Expenditure_Label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/food_textbox"
        android:singleLine="false"
        android:textColor="#fd070707"
        android:background="#ffffffff"
        android:layout_toStartOf="@+id/savings_textbox"
        android:layout_alignTop="@+id/Food"
        android:layout_toEndOf="@+id/Savings"
        android:layout_alignRight="@+id/savings_textbox"
        android:layout_alignEnd="@+id/savings_textbox"
        android:layout_toRightOf="@+id/Savings" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/laundry_textbox"
        android:layout_toEndOf="@+id/Laundry"
        android:textColor="#ff040404"
        android:background="#ffffffff"
        android:layout_alignBottom="@+id/Laundry"
        android:layout_alignLeft="@+id/savings_textbox"
        android:layout_alignStart="@+id/savings_textbox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/rent_textbox"
        android:textColor="#ff030303"
        android:background="#fff7f7f7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/laundry_textbox"
        android:layout_toStartOf="@+id/Income_label"
        android:layout_alignRight="@+id/Income_label"
        android:layout_alignEnd="@+id/Income_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/rent_amount"
        android:layout_marginRight="98dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Savings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/savings_amount"
        android:layout_alignBaseline="@+id/savings_textbox"
        android:layout_alignBottom="@+id/savings_textbox"
        android:layout_alignLeft="@+id/rent_amount"
        android:layout_alignStart="@+id/rent_amount"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/food_amount"
        android:layout_alignTop="@+id/food_textbox"
        android:layout_alignRight="@+id/savings_amount"
        android:layout_alignEnd="@+id/savings_amount"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/laundry_amount"
        android:layout_below="@+id/Food"
        android:layout_alignRight="@+id/food_amount"
        android:layout_alignEnd="@+id/food_amount"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/income_amount"
        android:layout_below="@+id/laundry_textbox"
        android:layout_alignRight="@+id/laundry_amount"
        android:layout_alignEnd="@+id/laundry_amount"
        android:layout_marginTop="42dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/expendentures"
        android:layout_below="@+id/income_amount"
        android:layout_alignRight="@+id/income_amount"
        android:layout_alignEnd="@+id/income_amount"
        android:layout_marginTop="36dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/remaining"
        android:layout_below="@+id/expendentures"
        android:layout_alignRight="@+id/expendentures"
        android:layout_alignEnd="@+id/expendentures"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        android:id="@+id/Income_label"
        android:layout_toStartOf="@+id/income_amount"
        android:layout_alignTop="@+id/income_amount"
        android:layout_toLeftOf="@+id/income_amount"
        android:layout_marginRight="50dp"
        android:textColorHighlight="#ffffffff"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Expences"
        android:id="@+id/Expenditure_Label"
        android:layout_toStartOf="@+id/expendentures"
        android:layout_alignTop="@+id/expendentures"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/remaining"
        android:layout_alignRight="@+id/Income_label"
        android:layout_alignEnd="@+id/Income_label"
        android:textColor="#ffffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update_rent"
        android:layout_toEndOf="@+id/savings_amount"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/update_savings"
        android:layout_alignEnd="@+id/update_savings" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update_savings"
        android:layout_alignBottom="@+id/savings_textbox"
        android:layout_toRightOf="@+id/savings_amount"
        android:layout_toEndOf="@+id/savings_amount"
        android:singleLine="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update_food"
        android:layout_alignBottom="@+id/food_textbox"
        android:layout_alignLeft="@+id/update_laundry"
        android:layout_alignStart="@+id/update_laundry" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update_laundry"
        android:layout_above="@+id/income_amount"
        android:layout_toRightOf="@+id/laundry_amount"
        android:layout_toEndOf="@+id/laundry_amount" />

</RelativeLayout>